<div class="pages">
  <div class="common">
    <h1><%= @special_project.title %> <%= favourite_block @special_project %></h1>
    <strong>
      <%= @special_project.author %>.
      <%= Russian::strftime @special_project.created_at, '%A, %e %B %Y г.' %>
    </strong>

    <div class="post_preview">
      <div class="thumb"><%= image_tag(@special_project.picture(:medium)) %></div>

      <div class="short_desc">
        <%= @special_project.short_description %>
      </div>

      <div class="clear"></div>
    </div>

    <div class="post_info">
      <div class="post_share">
        <div class="title">Делись с друзьями</div>
        <%= render 'shared/share_social' %>
        <div class="clear"></div>
      </div>
    </div>

    <div class="description">
      <%=raw @special_project.content %>
    </div>
    
    <div class="clear"></div>
      <div class="article_tags">
        <% @tags.each do |t| %>
          <%= link_to t.name, tag_special_projects_path(tag: t.name) %>
        <% end %>
    </div>
    <div class="clear"></div>
    <div class="comment treeview">
      <ul>
        <% @comments.each do |comment| %>
          <%= render 'shared/comment', comment: comment %>
        <% end %>
      </ul>
    </div>
    <div class="add_comment">
      <%= render 'shared/comment_form' %>
    </div>

    <div class="clear"></div>
  </div>

  <div class="sidebar">
    <%= render 'shared/sidebar' %>
  </div>

  <div class="clear"></div>
</div>
