<%= semantic_form_for [:admin, @user] do |f| %>
  <%= f.inputs 'Основное' do %>
    <%= f.input :email %>
    <%= f.input :role, as: :select, collection: Role.user_sets, include_blank: false %>
    <%= f.input :name %>
    <%= f.input :avatar, as: :file, hint: f.template.image_tag(f.object.avatar.url(:medium)) %>
  <% end %>
      
  <%= f.inputs 'Для эксперта' do %>
    <%= f.input :description, input_html: {size: 10} %>
    <%= f.input :about %>
  <% end %>

  <%= f.buttons %>
<% end %>
