<% content_for :title do %>
  Фестиваль Яркие Люди | Творческая группа | <%= @cg.name %>
<% end %>
<div class="pages">
    <div class="post_category_menu">
    <ul>
      <li class="about_ico"><a href="/pages/about_festival">О фестивале</a></li>
      <li class="creative_ico active"><a href="/creative_group">Творческая группа</a></li>
      <li class="participants_ico"><a href="/participants?category=music_stage">Программа</a></li>
      <li class="headliners_ico"><a href="/participants">Хэдлайнеры</a></li>
      <li class="org_ico"><a href="/pages/org_komitet">Оргкомитет</a></li>
    </ul>
    <div class="clear"></div>
  </div>
  <div class="expert_nav">
    <% if @prev = @expert.prev_expert %>
    <div class="prev_exp" data-url="<%= expert_path(@prev) %>">
      <div class="exp_cell">
        <div class="thumb">
          <%= link_to image_tag(@prev.avatar), expert_path(@prev) %>
        </div>
        <div class="name">
          <%= link_to @prev.name, expert_path(@prev) %>
        </div>
      </div>
    </div>
    <% end %>
    
    <% if @next = @expert.next_expert %>
    <div class="next_exp" data-url="<%= expert_path(@next) %>">
      <div class="exp_cell">
        <div class="thumb">
          <%= link_to image_tag(@next.avatar), expert_path(@next) %>
        </div>
        <div class="name">
          <%= link_to @next.name, expert_path(@next) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  
  <%= render 'title' %>
  
  <div class="expert_big_info">
    <!-- OPTIMIZE: brrrr...brrr -->
    <div class="name"><%== @expert.name.split(' ').join('<br>') %></div>
    <div class="thumb">
      <%= link_to image_tag(@expert.avatar(:medium)), expert_path(@expert) %>
    </div>
    <div class="doljnost"><%= @expert.description %></div>
    <div class="clear"></div>
  </div>
  
  <div class="expert_page">
    <div class="left_part">
      <div class="dop_title">
        Биография
      </div>
      <div class="bio">
         <%= @expert.about %><br />
      </div>
      <%= render 'post_share' %>
    </div>
    
    <%= render 'site_activity', :expert => @expert %>
  </div>
</div>
