<div class="header_flash_wrapper">
  <a href="/"></a>
    <div id="flashcontent_1">
      <div class="cap"></div>
    </div>
  
</div>

<div class="color_line_left">
  <div class="color_line_right">
    <div class="header_wrapper">
      <div id="search_block">
	<a class="search_button" href="#"><img src="/assets/ico_search.png" alt="" /></a>
      </div>

      <div class="show_search hidden">
	<div class="search_wrapper">
	  <%= form_tag search_path, method: :get do %>
	    <%= text_field_tag :q, params[:q], class: 'main_search_field' %>
	    <%= submit_tag 'Поиск' %>
	    <a class="close" href="#">Закрыть</a>
	  <% end %>
	</div>
      </div>


      <div id="login_block">
	<% unless current_user %>
	  <a class="login_button" href="#"><img src="/assets/ico_login.png" alt="" /></a>
	<% else %>
	  <div class="is_login">
	    <a class="login_user_flag" href="<%= dashboard_profile_path %>"><%= current_user.name %><span class="mask"></span></a>
	    <a href="#" class="logout logout_link">Выйти</a>
	  </div>
	<% end %>
      </div>

      <% unless current_user %>
	<div class="show_login hidden">
	  <div class="login_wrapper">
	    <span class="login_text">Войти на сайт через: </span>
	    <%= link_to image_tag('ico_fb_big.png'), user_omniauth_authorize_path(:facebook) %>
	    <%= link_to image_tag('ico_vk_big.png'), user_omniauth_authorize_path(:vkontakte) %>
	    <%= link_to image_tag('ico_od_big.png'), user_omniauth_authorize_path(:odnoklassniki) %>
	    <a class="close" href="#">Закрыть</a>
	  </div>
	</div>
      <% end %>

      <!-- TODO: move to coffee -->
      <script type="text/javascript">
	$(document).ready(function(){

	// SEARCH
	$("#search_block a.search_button").live('click',function(){

	$("#login_block a.login_button").removeClass("active");
	$(".show_login").addClass("hidden");

	if($(this).hasClass('active')) {
	$(this).removeClass("active");
	$(".show_search").addClass("hidden");
	}
	else {
	$(this).addClass("active");
	$(".show_search").removeClass("hidden");
	}

	return false;
	});
	$(".show_search .close").live('click',function(){
	$("#search_block a.search_button").removeClass("active");
	$(".show_search").addClass("hidden");
	});



	// LOGIN
	$("#login_block a.login_button").live('click',function(){

	$("#search_block a.search_button").removeClass("active");
	$(".show_search").addClass("hidden");

	if($(this).hasClass('active')) {
	$(this).removeClass("active");
	$(".show_login").addClass("hidden");
	}
	else {
	$(this).addClass("active");
	$(".show_login").removeClass("hidden");
	}

	return false;
	});
	$(".show_login .close").live('click',function(){
	$("#login_block a.login_button").removeClass("active");
	$(".show_login").addClass("hidden");
	});

	});
      </script>

      <div id="menu">
	<ul class="">
	  <li <%= 'class=selected' if @activity_page %>><%= link_to 'Кружки и студии', activities_path %></li>
	  <li <%= 'class=selected' if @article_page %>><%= link_to 'Яркий журнал', articles_path %></li>
	  <li class="current <%= 'selected' if current_page?(page_path('about_festival')) or current_page?(page_path('org_komitet')) %>"><%= link_to 'Фестиваль', page_path('about_festival') %>
	    <div class="sub_menu">
	      <ul>
		<li <%= 'class=selected' if current_page?(page_path('about_festival')) %>><%= link_to "О фестивале", page_path('about_festival') %></li>
		<li><a href="">Новости фестиваля</a></li>
		<li><a href="">Участники</a></li>
		<li <%= 'class=selected' if current_page?(page_path('org_komitet')) %>><%= link_to "Оргкомитет", page_path('org_komitet') %></li>
	      </ul>
	    </div>
	  </li>
	  <li <%= 'class=selected' if @expert_page %>><%= link_to 'Экспертный совет', experts_path %></li>
	  <li <%= 'class=selected' if @special_project_page %>><%= link_to 'Спецпроект', special_projects_path %></li>
	</ul>
      </div>

    </div>
  </div>
</div>
