<% content_for :title do %>
  Фестиваль Яркие Люди | Новости фестиваля | <%= @news.title %>
<% end %>

<div class="pages">
  <div class="common">
    <div id="news"></div>

    <%= render 'shared/photos_lightbox', object: @news %>

    <div class="news_view">
      <div class="title"><%= @news.title %></div>
      <div class="date"><%= Russian::strftime(@news.created_at, "%e %B, %A") %></div>
      <div class="text"><%= @news.content %></div>
      <div class="article_tags">
	<% @tags.each do |t| %>
	  <%= link_to t.name, tag_articles_path(tag: t.name) %>
	<% end %>
      </div>
    </div>
  </div>

  <div class="sidebar">
    <%= render 'shared/sidebar' %>
  </div>
  <div class="clear">
  </div>
</div>
