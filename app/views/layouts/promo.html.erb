	  <%= image_tag 'promo/index/letters/d.png',     id: 'bri-letters-d' %>
	  <%= image_tag 'promo/index/letters/i2.png',    id: 'bri-letters-i2' %>
	  <%= image_tag 'promo/index/letters/exclm.png', id: 'bri-letters-exclm' %>
