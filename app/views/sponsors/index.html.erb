<div class="post_list">
  <div class="post_category_menu">
    <ul>
      <li class="experts_ico"><a href="/experts">Экспертный совет</a></li>
      <li class="sponsors_ico active"><a href="/sponsors">Попечительский совет</a></li>
      <li class="crew_ico"><a href="">Команда</a></li>
      <li class="authors_ico"><a href="/authors">Авторы</a></li>
    </ul>
    <div class="clear"></div>
  </div>
  <h1>Спонсоры</h1>
  
  <div class="common">
    <div class="news_container">
      <% @sponsors.each do |sponsor| %>
        <div class="preview_cell">
          <div class="info">
            <div class="thumb">
              <%= link_to image_tag(sponsor.photo), sponsor %>
            </div>
            <div class="name">
              <%= link_to sponsor.first_name+" "+sponsor.last_name, sponsor %>
            </div>
            <div class="date">
              <%= sponsor.created_at.to_s(:main) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="clear"></div>
  </div>
  
</div>
