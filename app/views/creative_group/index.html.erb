    </ul>
    <div class="clear"></div>
  </div>
  <div class="expert_list_wrapper">
    <div class="expert_list">
      
    <% @cg.each_with_index do |tm, index| %>
      <div class="exp_preview">
        <%= link_to creative_group_path(tm) do %>
        <div class="thumb">
          <%= image_tag(tm.avatar)  %>
        </div>
        <span class="name"><%= tm.name %></span>
        <% end %>
        <span class="info"><%= tm.profession %></span>
      </div>
      <% if (index+1) % 6 == 0 %>
      <div class="clear"></div>
      <% end %>
    <% end %>
      
