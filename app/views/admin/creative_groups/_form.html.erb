<%= semantic_form_for [:admin, @creative_group], html: { multipart: true } do |f| %>
  <%= f.inputs 'Основное' do %>
    <%= f.input :name %>
    <%= f.input :profession %>
    <%= f.input :priority, :label => "Приоритет (чем больше - тем ближе к началу списка)" %>

    <%= render 'shared/editor_toolbar', element_id: 'creative_group_description' %>
    <%= f.input :description, input_html: { size: 10 } %>

    <%= f.input :avatar, as: :file, hint: f.template.image_tag(f.object.avatar.url) %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
