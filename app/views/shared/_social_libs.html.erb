<div id="fb-root"></div>
<script>
  <!-- SOCIAL API VARIABLES -->
  <!-- PRODUCTION -->
  var facebook_api_key = "359292310775946";
  var vk_api_key = "2953652";
  <!-- BUZZJA -->
  <!-- var facebook_api_key = "147094692096863" -->
  <!-- var vk_api_key = "3090242"; -->
  
 window.fbAsyncInit = function(){
    FB.init({
      appId      : facebook_api_key,
      status     : true,
      cookie     : true,
      xfbml      : true
    });

  };

  
  (function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/ru_RU/all.js";
  fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));

  (function() {
    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
    po.src = 'https://apis.google.com/js/plusone.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
   })();

 window.vk_init = function(title, url, image){
  title = typeof(title) !== 'undefined' ? title : "";
  image = typeof(image) !== 'undefined' ? image : "";
  url = typeof(url) !== 'undefined' ? url : "";

  VK.init({apiId: vk_api_key, onlyWidgets: true});
  $("#vk_share").html(VK.Share.button({url: url, title: title, image: image}));
  VK.Widgets.Like("vk_like", {type: "full", height: 22, pageTitle: title, pageUrl: url, pageImage: image});
 };
</script>
