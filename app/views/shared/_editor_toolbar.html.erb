<div id="wysihtml5-toolbar-<%= element_id %>" style="display: none;">
  <a data-wysihtml5-command="bold">bold</a>
  <a data-wysihtml5-command="italic">italic</a>
  <a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="h3">intermediate header</a>
  <a data-wysihtml5-command="formatBlock" data-wysihtml5-command-value="blockquote">quote</a>
  <a data-wysihtml5-command="insertImage">insert image</a>
  <div data-wysihtml5-dialog="insertImage" style="display: none;">
    <label>
      Image:<input data-wysihtml5-dialog-field="src" value="">
    </label>
    <a data-wysihtml5-dialog-action="save">OK</a>
    <a data-wysihtml5-dialog-action="cancel">Cancel</a>
  </div>

  <a data-wysihtml5-command="createLink">insert link</a>
  <div data-wysihtml5-dialog="createLink" style="display: none;">
    <label>
      Link:<input data-wysihtml5-dialog-field="href" value="http://" class="text">
    </label>
    <a data-wysihtml5-dialog-action="save">OK</a> <a data-wysihtml5-dialog-action="cancel">Cancel</a>
  </div>
  <a data-wysihtml5-action="change_view" style="float:right">switch to html view</a>
</div>

<!-- TODO: looks ugly...brr -->

<script>
$(document).ready(function() {
  var editor = new wysihtml5.Editor("<%= element_id %>", { 
              toolbar: "wysihtml5-toolbar-<%= element_id %>",
              parserRules:  wysihtml5ParserRules
  });
});
</script>
