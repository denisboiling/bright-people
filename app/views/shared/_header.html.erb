    <% unless current_user %>
      <a class="login" href=""><img src="/assets/ico_login.png" alt="" /></a>
      <%= link_to image_tag('ico_fb.png'), user_omniauth_authorize_path(:facebook) %>
      <%= link_to image_tag('ico_vk.png'), user_omniauth_authorize_path(:vkontakte) %>
      <%= link_to image_tag('ico_od.png'), user_omniauth_authorize_path(:odnoklassniki) %>
