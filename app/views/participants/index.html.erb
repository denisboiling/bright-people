<div class="pages">
  <div class="common">
    <div class="post_category_menu">
      <ul>
        <li class="about_ico"><a href="/pages/about_festival">О фестивале</a></li>
        <li class="org_ico"><a href="/pages/org_komitet">Оргкомитет</a></li>
        <li class="participants_ico active"><a href="/participants">Участники фестиваля</a></li>
      </ul>
      <div class="clear"></div>
    </div>
    <div>
      <ul>
        <li><%= link_to 'Хедлайнеры', '/participants' %></li>
        <li><%= link_to 'Музыкальная сцена', '/participants?category=music_stage' %></li>
        <li><%= link_to 'Кукольная сцена', '/participants?category=doll_stage' %></li>
        <li><%= link_to 'Цирковая сцена', '/participants?category=circus_stage' %></li>
        <li><%= link_to 'Уличные театры', '/participants?category=street_theather' %></li>
        <li><%= link_to 'Мастер-классы', '/participants?category=master_class' %></li>
      </ul>
    </div>
    <% if @best %>
      <% @best.each do |b| %>
        <%= image_tag b.logo.url(:thumb) %>
        <%= b.title %>
        <br>
        <%= b.description %>
        <br>
      <% end %>
    <% end %>
    <br>
    --------------------------------------------------
    <br>
    <% if @participants %>
      <% @participants.each do |p| %>
        <%= image_tag p.logo.url(:thumb) %>
        <%= p.title %>
        <br>
        <%= p.description %>
        <br>
      <% end %>
    <% end %>
  </div>
  <div class="sidebar">
    <%= render 'shared/sidebar' %>
  </div>
  <div class="clear">
  </div>
</div>
