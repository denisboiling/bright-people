<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title).present? ? yield(:title) : 'BrightPeople' %></title>
    <%= yield :head %>
    <%= stylesheet_link_tag 'application', :media => "all" %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <%== yield(:body).present? ? yield(:body) : '<body>' %>
    <div id="wrapper">
      <div id="header">
        <%= render partial: 'shared/header' %>
      </div>

      <% if current_user and current_user.email.blank? %>
        <%= render 'users/email_dialog', user: current_user %>
      <% end %>
      <%= render 'users/register_dialog' unless current_user %>
      
      <%= yield(:before_center) %>
      
      <div id="center">
        <%= yield %>
      </div>

      <div id="footer">
        <%= render partial: 'shared/footer' %>
      </div>

    </div>
  </body>
</html>
