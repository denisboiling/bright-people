<%= render 'activities/approve_dialog', activity: @activity %>

<div class="pages">

  <div class="common">

    <div class="detail_page">

      <h1><%= @activity.title %>
	<%= favourite_block @activity %>
	<% if @activity.participant? %>
	  <span class="mark">Участник фестиваля!</span>
	<% end %>
      </h1>

      <div class="base">На базе учреждения: <%= link_to @activity.organization.title, organization_path(@activity.organization) %></div>
      <div class="cat_list">
	Категории:
	<% @activity.direction_tags.each do |tag| %>
	  <%= link_to tag.name, activities_path(tag: tag.id) %>
	<% end %>
      </div>

      <div class="left_part">
	<%= render 'approved' %>

	<% if _min_age = @activity.min_age %>
	  <div class="age_block">
	    <span class="name">Возраст<br />детей</span><br />
	    <span class="age">от <%= t(:age, :count => @activity.min_age) %></span>
	  </div>
	<% end %>

	<div class="rating_block">
	  <span class="name">Рейтинг родителей</span>
	  <!-- OPTIMIZE: bad bad bad..bbr -->
	  <div class="rating" data-rating="<%= @activity.users_rating %>" data-activity-id="<%= @activity.id %>" data-lock=<%= !can?(:vote, @activity) %> data-already-vote=<%= current_user ? current_user.already_vote?(@activity) : false  %>>Звезды</div>
	  <%= render partial: 'vote_count' %><br />
	  <a href="#" class="cancel_rating <%= 'hidden' if (current_user ? !current_user.already_vote?(@activity) : true) %>">Изменить</a>
	</div>
	<div class="clear"></div>

	<div class="info_block">
	  <table>
	    <% if @activity.metro_station %>
	      <tr>
		<th><span>Метро</span></th>
		<td><%= @activity.metro_station.title %><br />
	      </tr>
	    <% end %>
	    <tr>
	      <th><span></span></th>
	      <td><%= @activity.region.title %><br />
	    </tr>
	    <tr>
	      <th><span>Адрес</span></th>
	      <td><%= y_link(@activity.coords, @activity.address) %></td>
	    </tr>
	    <tr>
	      <th><span>Сайт</span></th>
	      <td ><div class="activ_site"><a href=<%= @activity.site %> target="_blank" ><span class="mask"></span><%= @activity.site %></a></div></td>
	    </tr>
	    <tr>
	      <th><span>Телефон</span></th>
	      <td><%= @activity.phone %></td>
	    </tr>
	  </table>
	</div>
      </div>

      <div class="right_part">
	<div class="pikachoose">
	  <% if @activity.photos.count == 1 %>
	    <div class="mask"></div>
	    <%= link_to image_tag(@activity.photos.last.attach.url(:slider)), '#' %>
	  <% elsif  @activity.photos.count > 1 %>
	    <div class="mask"></div>
	    <ul id="pikame" class="jcarousel-skin-pika">
	      <% @activity.photos.each do |photo| %>
		<li><%= link_to image_tag(photo.attach.url(:slider)), '#' %></li>
	      <% end %>
	    </ul>
	  <% end %>
	</div>
	<script language="javascript">
	  $(document).ready(
	  function (){
	  $("#pikame").PikaChoose({carousel:true, autoPlay:false});
	  });
	</script>

      </div>
      <div class="clear"></div>

      <div class="title_block">О кружке</div>
      <div><%= simple_format @activity.description %></div>

      <% if @activity.is_edu? %>
	<%= render 'about_activity', activity: @activity %>
      <% end %>

      <% if @activity.activity_comments.parents.present? %>
	<div class="title_block">Отзывы родителей</div>
	<div class="comment">
	  <ul class="parent_comment">
	    <%= render 'activity_comment', comments: @activity.activity_comments.parents.first(5) %>
	  </ul>

	  <% if @activity.activity_comments.parents.count > 5 %>
	    <div class="more_comment">
	      <a href="#" data-type="parents" data-page="1" class="load_comments">Загрузить еще 5 отзывов</a>
	    </div>
	  <% end %>

	</div>
      <% end %>


      <% if @activity.activity_comments.childrens.present? %>
	<div class="title_block">Отзывы детей</div>
	<div class="comment">
	  <ul class="children_comment">
	    <%= render 'activity_comment', comments: @activity.activity_comments.childrens.first(5) %>
	  </ul>

	  <% if @activity.activity_comments.childrens.count > 5 %>
	    <div class="more_comment">
	      <a href="#" data-type="childrens" data-page="1" class="load_comments">Загрузить еще 5 отзывов</a>
	    </div>
	  <% end %>
	</div>
      <% end %>

    </div>
    <div class="share_block">
    
    <div class="soc_like_button">Делись с друзьями</div>
    
    
    <div class="soc_like_button">        
