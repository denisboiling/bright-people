<h1><%= @special_project.title %></h1>
<h3><%= @special_project.author %></h3>
<p><%= @special_project.content %></p>

<h5>SpecialProject Tags</h5>
<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, { :action => :tag, :id => tag.name }, :class => css_class %>
<% end %>

Комментарии <br />

<div class="comments_list">
  <% @comments.each do |comment| %>
    <%= render 'shared/comment', comment: comment %>
  <% end %>
</div>

<%= render 'shared/comment_form' %>

<%= content_for :head do %>
  <script>
    var relation = 'SpecialProject';
    var relation_id = <%= @special_project.id %>;
    var can_create_comment = <%= can? :create, :comment %>
  </script>
<% end %>
