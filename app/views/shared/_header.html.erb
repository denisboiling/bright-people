    <div id="search">
      <%= form_tag search_path, method: :get do %>
	<%= text_field_tag :q, params[:q], class: 'main_search_field' %>
	<%= submit_tag 'Поиск' %>
      <% end %>
    </div>

  </div>
  <div class="logo"><a href=""><img src="/assets/logo.png" alt="" /></a></div>

  <div class="clear"></div>
</div>

