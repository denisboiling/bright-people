<div class="activit">
  <div class="moscow_agencies">
    <div class="title">Детские учреждения Москвы
      <%= link_to 'Образовательные', activities_path(kind: 'educational'), class: 'title_link globe' %>
      <%= link_to 'Развлекательные', activities_path(kind: 'entertainment'), class: 'title_link balloon' %>
    </div>

    <% Activity.published.sample(4).each do |activity| %>
      <div class="preview_agencies">
        <div class="info">
      <div class="thumb"><%= link_to image_tag(activity.logo.url), activity_path(activity) %></div>
      <div class="name"><%= link_to activity.title, activity_path(activity) %></div>
          <div class="geo"><%= activity.region.title %></div>
        </div>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
</div>

<div class="council">
 
  <div style="float:right; width:100%;	margin-left:-780px;">
  <div class="trustee">
    <div class="title">Попечительский совет</div>

    <!-- Slider Setup -->

    <input class="hidden" checked type="radio" name="slider" id="slide1" />
    <input class="hidden" type="radio" name="slider" id="slide2" />
    <input class="hidden" type="radio" name="slider" id="slide3" />
    <input class="hidden" type="radio" name="slider" id="slide4" />
    <input class="hidden" type="radio" name="slider" id="slide5" />
    <input class="hidden" type="radio" name="slider" id="slide6" />
    <input class="hidden" type="radio" name="slider" id="slide7" />
    <input class="hidden" type="radio" name="slider" id="slide8" />
    <input class="hidden" type="radio" name="slider" id="slide9" />
    <input class="hidden" type="radio" name="slider" id="slide10" />
    <!-- The Slider -->

    <div id="slides">

      <div id="overflow">

        <div class="inner">
          <% Sponsor.order('id ASC').each do |sponsor| %>
            <article>
              <div class="info">
                <%= sponsor.first_name %><br /><span><%= sponsor.last_name.upcase %></span>
                
              </div>
              <%= link_to image_tag(sponsor.photo.url(:main)), sponsor_path(sponsor), class: :thumb %>
              
            </article>
          <% end %>

          <div class="clear"></div>
        </div> <!-- .inner -->

      </div> <!-- #overflow -->

    </div> <!-- #slides -->


    <!-- Controls and Active Slide Display -->

    <div id="controls">
      <label for="slide1"></label>
      <label for="slide2"></label>
      <label for="slide3"></label>
      <label for="slide4"></label>
      <label for="slide5"></label>
      <label for="slide6"></label>
      <label for="slide7"></label>
      <label for="slide8"></label>
      <label for="slide9"></label>
      <label for="slide10"></label>
    </div> <!-- #controls -->

    <div id="active" class="hidden">
      <label for="slide1"></label>
      <label for="slide2"></label>
      <label for="slide3"></label>
      <label for="slide4"></label>
      <label for="slide5"></label>
      <label for="slide6"></label>
      <label for="slide7"></label>
      <label for="slide8"></label>
      <label for="slide9"></label>
      <label for="slide10"></label>
    </div> <!-- #active -->
  </div>
  
  </div>
  <div class="clear"></div>
</div>
