<% interviews.each do |interview| %>
  <div class="preview_cell">
    <div class="info">
      <div class="thumb">
        <%= link_to image_tag(interview.picture), interview %>
      </div>
      <div class="name">
        <%= link_to interview.title, interview %>
      </div>
      <div class="comments_count">
        <%= interview.comments_count %>
      </div>
      <div class="date">
        <%= interview.created_at.to_s(:main) %>
      </div>
    </div>
  </div>
<% end %>
