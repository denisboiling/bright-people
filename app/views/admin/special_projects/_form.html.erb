<%= semantic_form_for [:admin, @special_project], html: { multipart: true } do |f| %>
  <%= f.inputs 'Основное' do %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :short_description %>
    <%= render 'shared/editor_toolbar', element_id: 'special_project_content' %>
    <%= f.input :content, input_html: {size: 10} %>
    <%= f.input :special_project_tag_list %>
    <%= f.input :picture, as: :file, hint: f.template.image_tag(f.object.picture.url(:medium)) %>
  <% end %>
  <%= f.actions %>
<% end %>
