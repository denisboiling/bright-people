<h1><%= @article.title %></h1>
<h3><%= @article.author %></h3>
<p><%= @article.content %></p>

<h5>Article Tags</h5>
<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, { action: :tag, id: tag.name }, class: css_class %>
<% end %>

<h5>Comments</h5>
<%= render 'comments/comments_block', comments: @comments %>
