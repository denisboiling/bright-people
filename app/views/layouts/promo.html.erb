        <img src="/assets/promo/index/photo.jpg" id="bri-photo-8"  class="bri-photo">
        <img src="/assets/promo/index/photo.jpg" id="bri-photo-9"  class="bri-photo">
        <img src="/assets/promo/index/photo.jpg" id="bri-photo-10" class="bri-photo">
        <img src="/assets/promo/index/photo.jpg" id="bri-photo-11" class="bri-photo">
        <img src="/assets/promo/index/photo.jpg" id="bri-photo-12" class="bri-photo">

      </div>
    </div>

    <footer>

      <div class="bri-links">

        <div class="bri-news left">
          <span class="left">Читайте<br>яркие новости</span>
	  <%= link_to image_tag('promo/index/fb.png'), '#' %>
